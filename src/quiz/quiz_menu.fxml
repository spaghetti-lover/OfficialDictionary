            <Font name="Chalkboard SE Bold" size="93.0" />
         </font>
      </Label>
      <ImageView fitHeight="143.0" fitWidth="149.0" layoutX="40.0" layoutY="57.0" pickOnBounds="true" preserveRatio="true" styleClass="image">
         <image>
            <Image url="@../resource/media/normal/idea.png" />
         </image>
      </ImageView>
      <Button fx:id="addButtonQuiz" layoutX="271.0" layoutY="329.0" mnemonicParsing="false" onAction="#Initialize" prefHeight="85.0" prefWidth="296.0" style="-fx-background-radius: 32; -fx-background-color: #F2BE22;" text="Add new question" textFill="#655d5d">
         <font>
            <Font name="STIXGeneral-Regular" size="33.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
